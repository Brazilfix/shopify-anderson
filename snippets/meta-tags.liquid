{%- comment -%}
  Meta Tags para SEO e Social Media
{%- endcomment -%}

{%- if page_description -%}
  <meta property="og:description" content="{{ page_description | escape }}">
  <meta name="twitter:description" content="{{ page_description | escape }}">
{%- endif -%}

<meta property="og:type" content="website">
<meta property="og:title" content="{{ page_title | escape }}">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:site_name" content="{{ shop.name }}">

{%- if page_image -%}
  <meta property="og:image" content="http:{{ page_image | img_url: '1200x630' }}">
  <meta property="og:image:secure_url" content="https:{{ page_image | img_url: '1200x630' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:image" content="https:{{ page_image | img_url: '1200x630' }}">
{%- else -%}
  <meta name="twitter:card" content="summary">
{%- endif -%}

<meta name="twitter:title" content="{{ page_title | escape }}">

{%- if template == 'product' -%}
  <meta property="og:type" content="product">
  <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html }}">
  <meta property="og:price:currency" content="{{ cart.currency.iso_code }}">
  <meta property="product:price:amount" content="{{ product.price | money_without_currency | strip_html }}">
  <meta property="product:price:currency" content="{{ cart.currency.iso_code }}">
  
  {%- if product.available -%}
    <meta property="og:availability" content="instock">
  {%- else -%}
    <meta property="og:availability" content="oos">
  {%- endif -%}
{%- endif -%}

{%- if template == 'article' -%}
  <meta property="og:type" content="article">
  <meta property="article:published_time" content="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}">
  <meta property="article:author" content="{{ article.author }}">
  
  {%- for tag in article.tags -%}
    <meta property="article:tag" content="{{ tag }}">
  {%- endfor -%}
{%- endif -%}
