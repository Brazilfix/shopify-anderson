<style>
.cart-drawer {
  position: fixed;
  top: 0;
  right: -100%;
  width: 100%;
  max-width: 450px;
  height: 100vh;
  background: var(--color-background);
  box-shadow: var(--shadow-xl);
  z-index: var(--z-modal);
  transition: right var(--transition-base);
  display: flex;
  flex-direction: column;
}

.cart-drawer.active {
  right: 0;
}

.cart-drawer__header {
  padding: var(--spacing-lg);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-drawer__title {
  font-size: 1.5rem;
  font-weight: 700;
}

.cart-drawer__close {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--color-background-secondary);
  transition: all var(--transition-base);
}

.cart-drawer__close:hover {
  background: var(--color-primary);
  color: white;
}

.cart-drawer__content {
  flex: 1;
  overflow-y: auto;
  padding: var(--spacing-lg);
}

.cart-drawer__empty {
  text-align: center;
  padding: var(--spacing-3xl) var(--spacing-lg);
}

.cart-drawer__empty-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto var(--spacing-md);
  opacity: 0.3;
}

.cart-drawer__empty-text {
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-lg);
}

.cart-drawer__items {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.cart-item {
  display: flex;
  gap: var(--spacing-md);
  padding-bottom: var(--spacing-md);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.cart-item__image {
  width: 100px;
  height: 100px;
  border-radius: var(--border-radius);
  overflow: hidden;
  flex-shrink: 0;
}

.cart-item__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cart-item__details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.cart-item__title {
  font-weight: 600;
  margin-bottom: var(--spacing-xs);
  line-height: 1.4;
}

.cart-item__variant {
  font-size: 0.875rem;
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-xs);
}

.cart-item__price {
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: var(--spacing-sm);
}

.cart-item__quantity {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-top: auto;
}

.cart-item__qty-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid var(--color-text-secondary);
  border-radius: var(--border-radius-sm);
  transition: all var(--transition-fast);
}

.cart-item__qty-btn:hover {
  border-color: var(--color-primary);
  color: var(--color-primary);
}

.cart-item__qty-input {
  width: 50px;
  text-align: center;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: var(--border-radius-sm);
  padding: 0.375rem;
}

.cart-item__remove {
  color: var(--color-text-secondary);
  font-size: 0.875rem;
  text-decoration: underline;
  margin-top: var(--spacing-xs);
  transition: color var(--transition-fast);
}

.cart-item__remove:hover {
  color: #ef4444;
}

.cart-drawer__footer {
  padding: var(--spacing-lg);
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  background: var(--color-background-secondary);
}

.cart-drawer__subtotal {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
  font-size: 1.125rem;
}

.cart-drawer__subtotal-label {
  font-weight: 600;
}

.cart-drawer__subtotal-price {
  font-weight: 700;
  font-size: 1.5rem;
  color: var(--color-primary);
}

.cart-drawer__note {
  font-size: 0.875rem;
  color: var(--color-text-secondary);
  text-align: center;
  margin-bottom: var(--spacing-md);
}

.cart-drawer__buttons {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

[data-theme="dark"] .cart-drawer__header,
[data-theme="dark"] .cart-item,
[data-theme="dark"] .cart-drawer__footer {
  border-color: rgba(255, 255, 255, 0.1);
}
</style>

<div class="cart-drawer" id="cartDrawer">
  <div class="cart-drawer__header">
    <h2 class="cart-drawer__title">{{ 'general.cart.title' | t }}</h2>
    <button class="cart-drawer__close" id="cartDrawerClose" aria-label="{{ 'general.accessibility.close' | t }}">
      {% render 'icon-close' %}
    </button>
  </div>

  <div class="cart-drawer__content">
    {% if cart.item_count == 0 %}
      <div class="cart-drawer__empty">
        <div class="cart-drawer__empty-icon">
          {% render 'icon-cart' %}
        </div>
        <p class="cart-drawer__empty-text">{{ 'general.cart.empty' | t }}</p>
        <a href="/collections/all" class="btn btn--primary">
          {{ 'general.cart.continue_shopping' | t }}
        </a>
      </div>
    {% else %}
      <div class="cart-drawer__items">
        {% for item in cart.items %}
          <div class="cart-item" data-line-item="{{ forloop.index }}">
            <div class="cart-item__image">
              {% if item.image %}
                <img src="{{ item.image | img_url: '200x' }}" alt="{{ item.title | escape }}" loading="lazy">
              {% else %}
                {{ 'product-1' | placeholder_svg_tag }}
              {% endif %}
            </div>

            <div class="cart-item__details">
              <h3 class="cart-item__title">{{ item.product.title }}</h3>
              
              {% unless item.variant.title contains 'Default' %}
                <p class="cart-item__variant">{{ item.variant.title }}</p>
              {% endunless %}
              
              <p class="cart-item__price">{{ item.final_price | money }}</p>

              <div class="cart-item__quantity">
                <button class="cart-item__qty-btn" data-action="decrease" data-line="{{ forloop.index }}" aria-label="Diminuir quantidade">
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 8h8"/>
                  </svg>
                </button>
                
                <input 
                  type="number" 
                  class="cart-item__qty-input" 
                  value="{{ item.quantity }}" 
                  min="0"
                  data-line="{{ forloop.index }}"
                  aria-label="Quantidade"
                >
                
                <button class="cart-item__qty-btn" data-action="increase" data-line="{{ forloop.index }}" aria-label="Aumentar quantidade">
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M8 4v8M4 8h8"/>
                  </svg>
                </button>
              </div>

              <button class="cart-item__remove" data-line="{{ forloop.index }}">
                Remover
              </button>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>

  {% if cart.item_count > 0 %}
    <div class="cart-drawer__footer">
      <div class="cart-drawer__subtotal">
        <span class="cart-drawer__subtotal-label">{{ 'general.cart.subtotal' | t }}</span>
        <span class="cart-drawer__subtotal-price">{{ cart.total_price | money }}</span>
      </div>

      <p class="cart-drawer__note">Frete e impostos calculados no checkout</p>

      <div class="cart-drawer__buttons">
        <a href="/checkout" class="btn btn--primary btn--large">
          {{ 'general.cart.checkout' | t }}
        </a>
        <a href="{{ routes.cart_url }}" class="btn btn--secondary">
          {{ 'general.cart.view_cart' | t }}
        </a>
      </div>
    </div>
  {% endif %}
</div>

<script>
// Cart drawer quantity controls
document.addEventListener('click', async (e) => {
  const qtyBtn = e.target.closest('.cart-item__qty-btn');
  const removeBtn = e.target.closest('.cart-item__remove');
  
  if (qtyBtn) {
    const line = qtyBtn.dataset.line;
    const action = qtyBtn.dataset.action;
    const input = document.querySelector(`.cart-item__qty-input[data-line="${line}"]`);
    const currentQty = parseInt(input.value);
    const newQty = action === 'increase' ? currentQty + 1 : Math.max(0, currentQty - 1);
    
    await updateCartQuantity(line, newQty);
  }
  
  if (removeBtn) {
    const line = removeBtn.dataset.line;
    await updateCartQuantity(line, 0);
  }
});

// Update quantity on input change
document.addEventListener('change', async (e) => {
  if (e.target.matches('.cart-item__qty-input')) {
    const line = e.target.dataset.line;
    const qty = parseInt(e.target.value) || 0;
    await updateCartQuantity(line, qty);
  }
});

async function updateCartQuantity(line, quantity) {
  try {
    const response = await fetch('/cart/change.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ line, quantity })
    });
    
    if (!response.ok) throw new Error('Erro ao atualizar carrinho');
    
    // Refresh cart
    window.location.reload();
  } catch (error) {
    console.error('Error:', error);
  }
}
</script>
