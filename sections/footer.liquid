  <div class="container">
    <div class="footer__container">
      <!-- About Section -->
      <div class="footer__section">
        <h3 class="footer__section-title">{{ section.settings.about_title }}</h3>
        <p class="footer__newsletter-text">{{ section.settings.about_text }}</p>
        
        {% if section.settings.show_social %}
        <div class="footer__social">
          {% if settings.social_instagram != blank %}
          <a href="{{ settings.social_instagram }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Instagram">
