<style>
.collection-main {
  padding: var(--spacing-3xl) 0;
}

.collection-main__toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-2xl);
  flex-wrap: wrap;
  gap: var(--spacing-md);
}

.collection-main__results {
  color: var(--color-text-secondary);
}

.collection-main__sort {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.collection-main__grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: var(--spacing-lg);
}

@media (max-width: 768px) {
  .collection-main__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);
  }
}
</style>

<section class="collection-main">
  <div class="container">
    {% if section.settings.enable_filtering or section.settings.enable_sorting %}
      <div class="collection-main__toolbar">
        <div class="collection-main__results">
          {{ collection.products_count }} 
          {% if collection.products_count == 1 %}
            produto
          {% else %}
            produtos
          {% endif %}
        </div>
        
        {% if section.settings.enable_sorting %}
          <div class="collection-main__sort">
            <label for="sort-by">{{ 'products.filters.sort_by' | t }}:</label>
            <select id="sort-by" class="form-select" onchange="window.location.href=this.value">
              <option value="{{ collection.url }}?sort_by=manual">Em Destaque</option>
              <option value="{{ collection.url }}?sort_by=best-selling" {% if collection.sort_by == 'best-selling' %}selected{% endif %}>
                {{ 'products.filters.best_selling' | t }}
              </option>
              <option value="{{ collection.url }}?sort_by=title-ascending" {% if collection.sort_by == 'title-ascending' %}selected{% endif %}>
                {{ 'products.filters.title_asc' | t }}
              </option>
              <option value="{{ collection.url }}?sort_by=title-descending" {% if collection.sort_by == 'title-descending' %}selected{% endif %}>
                {{ 'products.filters.title_desc' | t }}
              </option>
              <option value="{{ collection.url }}?sort_by=price-ascending" {% if collection.sort_by == 'price-ascending' %}selected{% endif %}>
                {{ 'products.filters.price_low_high' | t }}
              </option>
              <option value="{{ collection.url }}?sort_by=price-descending" {% if collection.sort_by == 'price-descending' %}selected{% endif %}>
                {{ 'products.filters.price_high_low' | t }}
              </option>
              <option value="{{ collection.url }}?sort_by=created-descending" {% if collection.sort_by == 'created-descending' %}selected{% endif %}>
                {{ 'products.filters.newest' | t }}
              </option>
            </select>
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="collection-main__grid">
      {% for product in collection.products %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      <div style="margin-top: var(--spacing-2xl); text-align: center;">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Coleção Principal",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Produtos por Página",
      "min": 12,
      "max": 48,
      "step": 12,
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "label": "Ativar Filtros",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "label": "Ativar Ordenação",
      "default": true
    }
  ]
}
{% endschema %}
